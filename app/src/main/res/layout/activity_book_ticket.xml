<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- Top Bar with Back Button and Menu -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="Back button" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Dune Universe"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/backButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp" />

        <ImageView
            android:id="@+id/menuButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="Menu button" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Movie Banner Image -->
    <androidx.cardview.widget.CardView
        android:id="@+id/movieBanner"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_1"
            android:contentDescription="Movie banner" />

    </androidx.cardview.widget.CardView>

    <!-- Seat Selection Grid -->
    <TextView
        android:id="@+id/seatsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seat Selection"
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/movieBanner"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <GridLayout
        android:id="@+id/seatGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/movieBanner"
        android:layout_marginTop="16dp"
        android:columnCount="8"
        android:rowCount="6">

        <!-- Row A -->
        <TextView
            style="@style/SeatStyle.Available"
            android:text="A1" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="A2" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="A3" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="A4" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="A5" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="A6" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="A7" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="A8" />

        <!-- Row B -->
        <TextView
            style="@style/SeatStyle.Available"
            android:text="B1" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="B2" />
        <TextView
            style="@style/SeatStyle.Selected"
            android:text="B3" />
        <TextView
            style="@style/SeatStyle.Selected"
            android:text="B4" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="B5" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="B6" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="B7" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="B8" />

        <!-- Row C -->
        <TextView
            style="@style/SeatStyle.Available"
            android:text="C1" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="C2" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="C3" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="C4" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="C5" />
        <TextView
            style="@style/SeatStyle.Selected"
            android:text="C6" />
        <TextView
            style="@style/SeatStyle.Selected"
            android:text="C7" />
        <TextView
            style="@style/SeatStyle.Selected"
            android:text="C8" />

        <!-- Row D -->
        <TextView
            style="@style/SeatStyle.Available"
            android:text="D1" />
        <TextView
            style="@style/SeatStyle.Selected"
            android:text="D2" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="D3" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="D4" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="D5" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="D6" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="D7" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="D8" />

        <!-- Row E -->
        <TextView
            style="@style/SeatStyle.Selected"
            android:text="E1" />
        <TextView
            style="@style/SeatStyle.Selected"
            android:text="E2" />
        <TextView
            style="@style/SeatStyle.Selected"
            android:text="E3" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="E4" />
        <TextView
            style="@style/SeatStyle.Selected"
            android:text="E5" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="E6" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="E7" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="E8" />

        <!-- Row F -->
        <TextView
            style="@style/SeatStyle.Available"
            android:text="F1" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="F2" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="F3" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="F4" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="F5" />
        <TextView
            style="@style/SeatStyle.Selected"
            android:text="F6" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="F7" />
        <TextView
            style="@style/SeatStyle.Available"
            android:text="F8" />
    </GridLayout>

    <!-- Seat Legend -->
    <LinearLayout
        android:id="@+id/seatLegend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/seatGrid"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="16dp">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="#E0E0E0"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="16dp">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="#B2DFDB"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reserved"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="#009688"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selected"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Date & Time Section -->
    <TextView
        android:id="@+id/dateTimeLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date &amp; Time"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/seatLegend" />

    <!-- Date Selection -->
    <LinearLayout
        android:id="@+id/dateSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/dateTimeLabel"
        android:layout_marginTop="8dp">

        <!-- Day labels -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sat"
                android:textSize="12sp"
                android:textColor="#757575" />

            <TextView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="17"
                android:textSize="14sp"
                android:gravity="center"
                android:background="@drawable/date_circle"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sun"
                android:textSize="12sp"
                android:textColor="#757575" />

            <TextView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="18"
                android:textSize="14sp"
                android:gravity="center"
                android:background="@drawable/date_circle_selected"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon"
                android:textSize="12sp"
                android:textColor="#757575" />

            <TextView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="19"
                android:textSize="14sp"
                android:gravity="center"
                android:background="@drawable/date_circle"
                android:textColor="#757575" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tue"
                android:textSize="12sp"
                android:textColor="#757575" />

            <TextView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="20"
                android:textSize="14sp"
                android:gravity="center"
                android:background="@drawable/date_circle"
                android:textColor="#757575" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wed"
                android:textSize="12sp"
                android:textColor="#757575" />

            <TextView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="21"
                android:textSize="14sp"
                android:gravity="center"
                android:background="@drawable/date_circle"
                android:textColor="#757575" />
        </LinearLayout>
    </LinearLayout>

    <!-- Time Selection -->
    <LinearLayout
        android:id="@+id/timeSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/dateSelection"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="13:00"
            android:textSize="14sp"
            android:padding="8dp"
            android:gravity="center"
            android:background="@drawable/time_background"
            android:textColor="#757575"
            android:layout_marginHorizontal="4dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="15:45"
            android:textSize="14sp"
            android:padding="8dp"
            android:gravity="center"
            android:background="@drawable/time_background_selected"
            android:textColor="#009688"
            android:layout_marginHorizontal="4dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="18:50"
            android:textSize="14sp"
            android:padding="8dp"
            android:gravity="center"
            android:background="@drawable/time_background"
            android:textColor="#757575"
            android:layout_marginHorizontal="4dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="20:30"
            android:textSize="14sp"
            android:padding="8dp"
            android:gravity="center"
            android:background="@drawable/time_background"
            android:textColor="#757575"
            android:layout_marginHorizontal="4dp" />
    </LinearLayout>

    <!-- Price and Buy Button Section -->
    <LinearLayout
        android:id="@+id/priceSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="14sp"
                android:textColor="#757575" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$60.00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <Button
            android:id="@+id/buyButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Buy Tickets"
            android:textAllCaps="false"
            android:background="@drawable/buy_button_background"
            android:textColor="#FFFFFF"
            android:padding="12dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>