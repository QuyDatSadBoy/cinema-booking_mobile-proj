<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivBotAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:contentDescription="Bot avatar"
        android:src="@drawable/custom_chatbot_icon"
        app:civ_border_width="1dp"
        app:civ_border_color="#EEEEEE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBotMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/chat_bubble_bot"
        android:maxWidth="260dp"
        android:padding="12dp"
        android:text="Xin chào! Tôi có thể giúp gì cho bạn?"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivBotAvatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBotMessageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="10:31"
        android:textColor="#757575"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/tvBotMessage"
        app:layout_constraintTop_toBottomOf="@+id/tvBotMessage" />

</androidx.constraintlayout.widget.ConstraintLayout>