<resources>
    <style name="SeatStyle">
        <item name="android:textColor">#757575</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SeatStyle.Available">
        <item name="android:background">@drawable/seat_available</item>
    </style>

    <style name="SeatStyle.Reserved">
        <item name="android:background">@drawable/seat_reserved</item>
        <item name="android:textColor">#757575</item>
    </style>

    <style name="SeatStyle.Selected">
        <item name="android:background">@drawable/seat_selected</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
